{
  "name": "findcv",
  "private": true,
  "packageManager": "bun@1.3.8",
  "workspaces": [
    "apps/*",
    "configs/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:seq": "turbo run build --concurrency 1",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "format": "biome format --write .",
    "lint": "biome lint --write .",
    "check": "biome check --write .",
    "typecheck": "turbo run typecheck",
    "i18n:extract": "turbo run i18n:extract",
    "i18n:validate": "bun scripts/validate-i18n-nesting.ts",
    "api:gentype": "turbo run api:gentype",
    "scripts:rmdeps": "bash ./scripts/rmdeps.sh",
    "scripts:update": "bash ./scripts/update.sh",
    "scripts:cleanup": "bash ./scripts/cleanup.sh",
    "scripts:reinstall": "bash ./scripts/reinstall.sh",
    "scripts:create-admin": "cd apps/backend && bun run scripts/create-admin.ts",
    "db:gen": "cd apps/backend && bunx prisma generate",
    "db:mig:dev": "cd apps/backend && bunx prisma migrate dev",
    "db:mig:deploy": "cd apps/backend && bunx prisma migrate deploy",
    "db:mig:reset": "cd apps/backend && bunx prisma migrate reset",
    "db:seed": "cd apps/backend && bunx prisma db seed",
    "db:studio": "cd apps/backend && bunx prisma studio",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.4.0",
    "@commitlint/config-conventional": "^20.4.0",
    "@commitlint/types": "^20.4.0",
    "@types/bun": "^1.3.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.8.1",
    "typescript": "5.9.3"
  }
}
