generator client {
  provider = "prisma-client"
  output   = "./gen/prisma"
}

generator prismabox {
  provider                    = "prismabox"
  output                      = "./gen/prismabox"
  typeboxImportDependencyName = "elysia"
  typeboxImportVariableName   = "t"
  inputModel                  = true
}

datasource db {
  provider = "postgresql"
}

enum AvailabilityType {
  FullTime
  PartTime
  Freelance
}

enum WorkLocationType {
  OnSite
  Remote
  Hybrid
}

enum FileType {
  Image
  Video
  Other
}

enum Gender {
  Male
  Female
}

enum Currency {
  Iqd
  Usd
}

enum CvStatus {
  Pending
  Approved
  Rejected
}

model User {
  id String @id @default(uuid())

  name  String
  image String?

  email         String  @unique
  emailVerified Boolean @default(false)

  phoneNumber         String?  @unique
  phoneNumberVerified Boolean?

  username        String?
  displayUsername String?

  role       String?
  banned     Boolean?  @default(false)
  banReason  String?
  banExpires DateTime?

  gender Gender?

  avatarId String?
  avatar   File?   @relation(fields: [avatarId], references: [id], name: "UserAvatar")

  governorateId String?
  governorate   Governorate? @relation(fields: [governorateId], references: [id])

  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  // Backrefs
  files    File[]
  sessions Session[]
  accounts Account[]
  cv       Cv?
}

model Cv {
  id String @id @default(uuid())

  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Professional Information
  jobTitle               String
  experienceInYears      Int
  expectedSalaryMin      Int?
  expectedSalaryMax      Int?
  expectedSalaryCurrency Currency?
  bio                    String
  githubUrl              String?
  linkedinUrl            String?
  portfolioUrl           String?
  availableForHire       Boolean

  availabilityTypes AvailabilityType[]
  workLocationTypes WorkLocationType[]

  status CvStatus @default(Pending)

  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Backref
  userSkills UserSkill[]
}

model Skill {
  id String @id @default(uuid())

  name String

  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Backref
  userSkills UserSkill[]
}

model UserSkill {
  id String @id @default(uuid())

  cvId String
  cv   Cv     @relation(fields: [cvId], references: [id], onDelete: Cascade)

  skillId String
  skill   Skill  @relation(fields: [skillId], references: [id], onDelete: Cascade)
}

model Session {
  id String @id @default(uuid())

  token String @unique

  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ipAddress String?
  userAgent String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  impersonatedBy String?
}

model Account {
  id String @id @default(uuid())

  accountId  String
  providerId String

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  accessToken  String?
  refreshToken String?
  idToken      String?

  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?

  scope    String?
  password String?

  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Verification {
  id String @id @default(uuid())

  identifier String
  value      String
  expiresAt  DateTime

  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model File {
  id String @id @default(uuid())

  key      String   @unique
  size     Int
  type     FileType
  isPublic Boolean  @default(false)

  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Backrefs
  avatars User[] @relation("UserAvatar")
}

model Governorate {
  id String @id @default(uuid())

  name String @unique

  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Backrefs
  users User[]
}
